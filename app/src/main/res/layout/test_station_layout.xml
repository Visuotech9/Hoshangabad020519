<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registration_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_spl_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.visuotech.hoshangabad_election.Activities.Election.Seoni_malwa.Act_polling_station"
    tools:showIn="@layout/test_station_layout">

    <TextView
        android:layout_width="match_parent"
        android:text="Select Polling Station :"
        android:paddingLeft="5dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/Black"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content" />



    <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
        android:id="@+id/SearchableSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background_border"
        android:gravity="center_horizontal"
        app:ShowBorders="true"
        app:BordersSize="1dp"
        app:RevealEmptyText="Touch to select"
        app:BoarderColor="@color/colorPrimary"
        app:SpinnerExpandHeight="250dp"/>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Submit"
        android:layout_marginTop="10dp"
        android:textColor="@color/White"
        android:textSize="12dp"
        tools:ignore="Suspicious0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:weightSum="1"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_weight=".45"
            android:layout_gravity="center_vertical"
            android:background="@color/seperator_color"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="0dp"
            android:textSize="18dp"
            android:layout_weight=".10"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Or"/>

        <View
            android:layout_width="0dp"
            android:layout_weight=".45"
            android:layout_gravity="center_vertical"
            android:background="@color/seperator_color"
            android:layout_height="1dp"/>




    </LinearLayout>

    <TextView
        android:id="@+id/tv_text22"
        android:layout_width="match_parent"
        android:text="Select Tehsil"
        android:paddingLeft="5dp"
        android:textColor="@color/Black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
