<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registration_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical">



        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/lin_spl_layout"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/profileCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="false"
                    android:layout_alignParentLeft="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="match_parent"
                            android:text="Select Polling station :"
                            android:paddingLeft="5dp"
                            android:textColor="@color/Black"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/background_border"
                            android:paddingBottom="8dp"
                            android:orientation="horizontal">


                            <!--<Spinner-->
                            <!--android:id="@+id/spinner_station"-->
                            <!--android:paddingLeft="20dp"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"/>-->

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinner_station"
                                android:layout_width="match_parent"
                                android:paddingTop="10dp"
                                android:textColor="#000000"
                                android:paddingBottom="10dp"
                                android:layout_height="match_parent"
                                />

                            <!--android:entries="@array/user_type"-->


                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_weight=".5"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:text="Submit"
                        android:textColor="@color/White"
                        android:textSize="12dp"
                        tools:ignore="Suspicious0dp" />

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/profileCard2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="false"
                    android:layout_alignParentLeft="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tv_text22"
                            android:layout_width="match_parent"
                            android:text="Select Tehsil"
                            android:paddingLeft="5dp"
                            android:textColor="@color/Black"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:id="@+id/lay2"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/background_border"
                            android:paddingBottom="8dp"
                            android:orientation="horizontal">


                            <Spinner
                                android:id="@+id/spinner_tehsil"
                                android:paddingLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <!--android:entries="@array/user_type"-->


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_text2"
                            android:layout_width="match_parent"
                            android:text="Select Block"
                            android:paddingLeft="5dp"
                            android:textColor="@color/Black"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:id="@+id/lay3"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/background_border"
                            android:paddingBottom="8dp"
                            android:orientation="horizontal">


                            <Spinner
                                android:id="@+id/spinner_block"
                                android:paddingLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <!--android:entries="@array/user_type"-->


                        </LinearLayout>




                        <TextView
                            android:layout_width="match_parent"
                            android:text="Select Polling station :"
                            android:paddingLeft="5dp"
                            android:textColor="@color/Black"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/background_border"
                            android:paddingBottom="8dp"
                            android:orientation="horizontal">


                            <!--<Spinner-->
                            <!--android:id="@+id/spinner_station"-->
                            <!--android:paddingLeft="20dp"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"/>-->

                            <Spinner
                                android:id="@+id/spinner_station2"
                                android:paddingLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <!--android:entries="@array/user_type"-->


                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_submit2"
                        android:layout_width="match_parent"
                        android:layout_weight=".5"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:text="Submit"
                        android:textColor="@color/White"
                        android:textSize="12dp"
                        tools:ignore="Suspicious0dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
</ScrollView>