<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Election.Seoni_malwa.Act_add_details">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:textSize="17dp"
        android:paddingTop="15dp"
        android:background="@color/sociald2"
        android:paddingBottom="15dp"
        android:gravity="center_horizontal"
        android:textColor="@color/Black"
        android:text="SDKLSA ASDSDKSAMD MKLASDM"
        android:layout_height="wrap_content" />

    <View android:id="@+id/separator"
        android:background="@color/lightgrey"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/lay_login"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_code"
            android:layout_width="match_parent"
            android:text="Code :"
            android:layout_marginTop="20dp"
            android:textColor="@color/Black"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="15dp"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:id="@+id/lay_text"
            android:layout_marginRight="30dp"
            android:background="@drawable/background_border"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Code"
                android:inputType="textPassword"
                android:paddingBottom="12dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="12dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textSize="15dp"
                android:textStyle="normal"
                app:drawable_hide="@drawable/ic_visibile"
                app:drawable_show="@drawable/ic_invisible"
                app:tint_color="@color/textcolor" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/lay_btn"
            android:background="@drawable/background_border"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_weight=".5"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Login"
                android:textColor="@color/White"
                android:textSize="12dp"
                tools:ignore="Suspicious0dp" />

        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/lay_add"
        android:visibility="gone"
        android:layout_height="wrap_content">


        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:background="@color/seperator_color"-->
            <!--android:layout_height="1dp"/>-->


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:text="Add Details"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:text="Male count :"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                tools:ignore="Suspicious0dp" />


            <EditText
                android:id="@+id/et_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:background="@drawable/background_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="Male count"
                android:layout_weight=".65"
                android:paddingTop="12dp"
                android:textColor="@color/Black"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textSize="15dp"
                android:textStyle="normal"
                tools:ignore="Suspicious0dp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:text="Female count :"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                tools:ignore="Suspicious0dp" />


            <EditText
                android:id="@+id/et_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:background="@drawable/background_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="Female count"
                android:layout_weight=".65"
                android:paddingTop="12dp"
                android:textColor="@color/Black"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textSize="15dp"
                android:textStyle="normal"
                tools:ignore="Suspicious0dp" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/background_border"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_weight=".5"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Submit"
                android:textColor="@color/White"
                android:textSize="12dp"
                tools:ignore="Suspicious0dp" />

        </LinearLayout>





    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:text="Data added successfully!"
        android:textColor="@color/Green"
        android:textSize="20dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />






</LinearLayout>